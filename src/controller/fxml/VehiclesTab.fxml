<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VehiclesTabController">
    <left>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="vehicleListButton" mnemonicParsing="false" prefHeight="57.0" prefWidth="136.0" text="List">
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin></Button>
                <Button fx:id="vehicleEditButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="136.0" text="Edit">
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin></Button>
                <Button fx:id="vehicleDeleteButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="136.0" text="Delete">
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin></Button>
                <Button fx:id="vehicleCreateButton" layoutX="10.0" layoutY="124.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="136.0" text="Create">
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin></Button>
            </children>
        </VBox>
    </left>
    <center>
        <TableView fx:id="vehiclesTable" prefHeight="398.0" prefWidth="456.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="45.0" text="ID" />
                <TableColumn fx:id="modelColumn" prefWidth="56.0" text="Model" />
                <TableColumn fx:id="serviceabilityColumn" prefWidth="126.0" text="Serviceability" />
                <TableColumn fx:id="typeColumn" prefWidth="135.0" text="Type" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
